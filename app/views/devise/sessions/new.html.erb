<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>

  <%= f.input :email %>
  <%= f.input :password %>
  
  <%= f.input :remkember_me, as: :boolean %>
 
  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
